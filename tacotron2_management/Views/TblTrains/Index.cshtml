@model IEnumerable<tacotron2_management.Models.TblTrain>

@{
    ViewData["Title"] = "Train management";
}

<h1>Train file management</h1>

<p>
    <a asp-action="ChooseAudioForTrain" class="btn btn-info">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Folder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblModelId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Folder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TblModelId)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
