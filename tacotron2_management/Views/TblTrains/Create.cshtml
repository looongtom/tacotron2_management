@model tacotron2_management.Models.TblTrain

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TblTrain</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TblModelId" class="control-label"></label>
                <select asp-for="TblModelId" class ="form-control" asp-items="ViewBag.TblModelId"></select>
            </div>
            <div class="form-group">
                <input type="file" id="folderInput" webkitdirectory directory multiple style="display: none;">
                <button onclick="selectFolder()">Select Folder</button>
                <p id="folderPath"></p>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    function selectFolder() {
        const folderInput = document.getElementById('folderInput');

        folderInput.addEventListener('change', function () {
            const selectedFolder = folderInput.files[0];
            if (selectedFolder) {
                document.getElementById('folderPath').textContent = selectedFolder.path;
            }
        });

        folderInput.click();
    }
</script>